{
   "Version": "2012-10-17",
   "Statement": [{
      "Effect": "Allow",
      "Action": "ec2:RunInstances",
      "Resource": "arn:aws:ec2:us-east-1:827061540866:subnet/subnet-dc17e385",
        "Condition": {
         "StringEquals": {
            "ec2:Vpc": "arn:aws:ec2:us-east-1:827061540866:vpc/vpc-f510ba90"
            }
      }
   },
   {
      "Effect": "Allow",
      "Action": "ec2:RunInstances",
      "Resource": "arn:aws:ec2:us-east-1::image/ami-*",
      "Condition": {
         "StringEquals": {
            "ec2:ResourceTag/Department": "Dev"
            }
      }
   },
   {
      "Effect": "Allow",
      "Action": "ec2:RunInstances",
      "Resource": [ 
         "arn:aws:ec2:us-east-1:827061540866:instance/*",
         "arn:aws:ec2:us-east-1:827061540866:volume/*",
         "arn:aws:ec2:us-east-1:827061540866:network-interface/*",
         "arn:aws:ec2:us-east-1:827061540866:key-pair/*",
         "arn:aws:ec2:us-east-1:827061540866:security-group/*"
        
         ]
      },
      {  
             "Sid": "TheseActionsSupportResourceLevelPermissionsWithInstancesAndTags",
             "Effect": "Allow",
             "Action": [
                "ec2:TerminateInstances",
                "ec2:StopInstances",
                "ec2:StartInstances"],
             "Resource": "arn:aws:ec2:us-east-1:827061540866:instance/*",
             "Condition": {
                 "StringEquals": {"ec2:ResourceTag/Department": "Dev"}
             }
         }
   ]
}
